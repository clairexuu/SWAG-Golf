{
  "name": "swag-concept-sketch-electron",
  "version": "1.0.4",
  "description": "SWAG Concept Sketch Agent Desktop App",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsc && NODE_ENV=development electron .",
    "build:api": "node build-api.js",
    "build:code-hash": "node generate-code-hash.js",
    "encrypt-env": "node encrypt-env.js",
    "build": "npm run build:mac && npm run build:win",
    "build:mac": "npm run encrypt-env && npm run build:api && npm run build:code-hash && tsc && electron-builder --mac -c.directories.output=release/mac",
    "build:win": "npm run encrypt-env && npm run build:api && npm run build:code-hash && tsc && electron-builder --win --x64 -c.directories.output=release/win",
    "release:mac": "npm run encrypt-env && npm run build:api && npm run build:code-hash && tsc && electron-builder --mac --publish always -c.directories.output=release/mac",
    "release:win": "npm run encrypt-env && npm run build:api && npm run build:code-hash && tsc && electron-builder --win --x64 --publish always -c.directories.output=release/win"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.7.3",
    "express": "^4.18.2",
    "tar": "^6.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/tar": "^6.1.11",
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.swag.concept-sketch-agent",
    "productName": "SWAG Concept Sketch Agent",
    "afterSign": "notarize.js",
    "publish": [
      {
        "provider": "github",
        "owner": "clairexuu",
        "repo": "SWAG-Golf",
        "releaseType": "release"
      }
    ],
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../frontend/dist",
        "to": "frontend"
      },
      {
        "from": "../../.env.encrypted",
        "to": "data/.env.encrypted"
      },
      {
        "from": "../../requirements.txt",
        "to": "data/requirements.txt"
      },
      {
        "from": "../../.code-hash",
        "to": "data/.code-hash"
      },
      {
        "from": "../../rag/reference_images",
        "to": "data/rag/reference_images",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../../rag/cache",
        "to": "data/rag/cache",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../../style/style_library",
        "to": "data/style/style_library",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../../style/visual_rule_template.json",
        "to": "data/style/visual_rule_template.json"
      },
      {
        "from": "../../api",
        "to": "data/api",
        "filter": [
          "**/*.py"
        ]
      },
      {
        "from": "../../generate",
        "to": "data/generate",
        "filter": [
          "**/*.py"
        ]
      },
      {
        "from": "../../prompt",
        "to": "data/prompt",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../../rag",
        "to": "data/rag",
        "filter": [
          "**/*.py"
        ]
      },
      {
        "from": "../../style",
        "to": "data/style",
        "filter": [
          "**/*.py"
        ]
      },
      {
        "from": "../../feedback",
        "to": "data/feedback",
        "filter": [
          "**/*.py"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        "dmg",
        "zip"
      ],
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "notarize": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true
    },
    "directories": {
      "output": "release"
    }
  }
}
